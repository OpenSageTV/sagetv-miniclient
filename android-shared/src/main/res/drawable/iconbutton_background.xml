<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="@android:integer/config_mediumAnimTime">

    <item android:state_window_focused="false" android:drawable="@color/iconbutton_background"/>

    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item android:state_focused="true" android:state_enabled="false" android:state_pressed="true" android:drawable="@color/material_blue_grey_800"/>
    <item android:state_focused="true" android:state_enabled="false" android:drawable="@color/material_blue_grey_800"/>
    <item android:state_focused="true" android:state_pressed="true" android:drawable="@color/accent_material_light"/>
    <item android:state_focused="false" android:state_pressed="true" android:drawable="@color/accent_material_light"/>
    <item android:state_focused="true" android:drawable="@color/accent_material_light"/>
    <item android:drawable="@color/iconbutton_background"/>

</selector>